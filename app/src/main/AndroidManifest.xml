<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wearetriple.tripleonboarding">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HourBookDetailActivity"
            android:parentActivityName=".HourBookOverviewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".HourBookOverviewActivity" />
        <activity
            android:name=".MemoryActivity"
            android:parentActivityName=".GamesActivity" />
        <activity
            android:name=".DepartmentDetailActivity"
            android:parentActivityName=".DepartmentOverviewActivity" />
        <activity android:name=".DepartmentOverviewActivity" />
        <activity android:name=".FaqActivity" />
        <activity android:name=".FactsActivity" />
        <activity
            android:name=".QuizActivity"
            android:parentActivityName=".GamesActivity" />
        <activity android:name=".GamesActivity" />
        <activity android:name=".MapActivity" />
        <activity android:name=".InfoActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
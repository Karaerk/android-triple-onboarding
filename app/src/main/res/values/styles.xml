<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_darkblue</item>
        <item name="colorPrimaryDark">@color/primary_overlayblue</item>
        <item name="colorAccent">@color/primary_pink</item>
        <item name="alertDialogTheme">@style/AppTheme.Widget.AlertDialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Defines the base style of views -->
    <style name="AppTheme.Layout">
        <item name="android:padding">@dimen/default_layout_padding</item>
    </style>

    <!-- Styles defined for elements -->
    <style name="AppTheme.Text">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/primary_darkblue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Html">
        <item name="fontFamily">@font/raleway_light</item>
        <item name="android:textColor">@color/primary_darkblue</item>
    </style>

    <style name="AppTheme.Text.Light" parent="AppTheme.Text">
        <item name="fontFamily">@font/raleway_light</item>
    </style>

    <style name="AppTheme.Text.Large" parent="AppTheme.Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Text.ExtraLarge" parent="AppTheme.Text">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.Text.Small">
        <item name="fontFamily">@font/chivo_regular</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Text.Custom" />

    <style name="AppTheme.Text.Custom.TitleSignIn">
        <item name="fontFamily">@font/dosis_medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/primary_darkblue</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.Text.Custom.DescriptionSignIn">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_darkblue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Styles defined for different kinds of views -->
    <style name="AppTheme.Widget" />

    <style name="AppTheme.Widget.Layout" />

    <style name="AppTheme.Widget.Layout.Horizontal">
        <item name="android:paddingStart">@dimen/default_layout_padding</item>
        <item name="android:paddingEnd">@dimen/default_layout_padding</item>
    </style>

    <style name="AppTheme.Widget.Layout.Vertical">
        <item name="android:paddingTop">@dimen/default_layout_padding</item>
        <item name="android:paddingBottom">@dimen/default_layout_padding</item>
    </style>

    <style name="AppTheme.Widget.VideoView">
        <item name="elevation">4dp</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Widget.Button" />

    <style name="AppTheme.Widget.Button.Round" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/fully_rounded_button</item>
    </style>

    <style name="AppTheme.Widget.Button.Square" parent="Widget.AppCompat.Button.Colored" />

    <style name="AppTheme.Widget.Button.Square.Small" parent="AppTheme.Widget.Button.Square">
        <item name="backgroundTint">@color/light_main</item>
        <item name="android:textColor">@color/primary_darkblue</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/dosis_regular</item>
        <item name="android:background">@drawable/less_rounded_button</item>
    </style>

    <style name="AppTheme.Widget.Button.Round.Pink" parent="AppTheme.Widget.Button.Round">
        <item name="android:backgroundTint">@color/primary_pink</item>
        <item name="colorButtonNormal">@color/primary_pink</item>
        <item name="android:textColor">@color/light_main</item>
    </style>

    <style name="AppTheme.Widget.Button.Round.Pink.Big" parent="AppTheme.Widget.Button.Round.Pink">
        <item name="android:paddingTop">@dimen/default_grid_btn_padding</item>
        <item name="android:paddingBottom">@dimen/default_grid_btn_padding</item>
    </style>

    <style name="AppTheme.Widget.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary_pink</item>
        <item name="android:textAppearanceSmall">@style/AppTheme.Text.Light</item>
        <item name="android:textAppearanceMedium">@style/AppTheme.Text.Light</item>
        <item name="android:textAppearanceLarge">@style/AppTheme.Text.Light</item>
        <item name="android:windowTitleStyle">@style/AppTheme.Text.Large</item>
    </style>

    <style name="AppTheme.Widget.CardView" />

    <style name="AppTheme.Widget.CardView.View" parent="Base.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Widget.CardView.ItemView" parent="AppTheme.Widget.CardView.View">
        <item name="android:layout_marginTop">@dimen/default_view_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_view_margin</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.Widget.CardView.Title" parent="AppTheme.Text.Large">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppTheme.Widget.CardView.Body" parent="AppTheme.Text.Light" />

    <style name="AppTheme.Widget.CardView.Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.Widget.CardView.Image.Title">
        <item name="fontFamily">@font/dosis_medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
    </style>

    <style name="AppTheme.Widget.HtmlOutput" parent="AppTheme.Text.Html">
        <item name="android:paddingTop">@dimen/default_layout_padding</item>
        <item name="android:paddingStart">@dimen/default_layout_padding</item>
        <item name="android:paddingEnd">@dimen/default_layout_padding</item>
    </style>
</resources>
